<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_dark"
    tools:context=".Giroscopo">

    <TextView
        android:id="@+id/IdTituloGiroscopo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Uso del Giróscopo"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/IdBtnVolverDeGiroscopo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/darker_gray"
        android:text="Volver" />

    <TextView
        android:id="@+id/IdTxtGiroscopo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="246dp"
        android:text="Ponga el dispositivo frente suyo y gírelo para la izquierda para activar el modo juego"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/IdTxtGiroscopo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IdTxtGiroscopo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Gire para la derecha para desactivar el modo juego"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/IdTxtTachoLoco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="124dp"
        android:text="¡Tacho loco activado!"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold" />
</RelativeLayout>