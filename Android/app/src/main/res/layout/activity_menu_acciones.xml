<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_dark"
    tools:context=".MenuAcciones">

    <TextView
        android:id="@+id/IdTxtMenuAcciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Elija una opción"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/IdBtnActivarSonido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/IdBtnManejarTapa"
        android:layout_below="@+id/IdTxtMenuAcciones"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="105dp"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="105dp"
        android:layout_marginRight="105dp"
        android:layout_marginBottom="50dp"
        android:background="@android:color/darker_gray"
        android:text="Activar sonido" />

    <Button
        android:id="@+id/IdBtnManejarTapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/IdBtnVaciarTacho"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="105dp"
        android:layout_marginLeft="105dp"
        android:layout_marginEnd="105dp"
        android:layout_marginRight="119dp"
        android:layout_marginBottom="50dp"
        android:background="@android:color/darker_gray"
        android:text="Manejar tapa" />

    <Button
        android:id="@+id/IdBtnVaciarTacho"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/IdBtnVolverDeAcelerometro"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="105dp"
        android:layout_marginLeft="105dp"
        android:layout_marginEnd="105dp"
        android:layout_marginRight="124dp"
        android:layout_marginBottom="89dp"
        android:background="@android:color/darker_gray"
        android:text="Vaciar tacho" />

    <Button
        android:id="@+id/IdBtnVolverDeAcelerometro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/darker_gray"
        android:text="Desconectar"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/IdTxtOpciones"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IdTxtMenuAcciones"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="Versión para pruebas"
        android:textAlignment="center"
        android:textStyle="bold" />
</RelativeLayout>